modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "proj", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Start Groundwater App"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Groundwater Finder App"

[[workflows.workflow]]
name = "Groundwater Finder App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install folium streamlit-folium scipy && streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Groundwater App"
author = 42797086
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install folium streamlit-folium scipy pyproj pykrige scikit-learn matplotlib pandas numpy requests geopandas"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0 --server.headless true"

[[ports]]
localPort = 5000
externalPort = 80
